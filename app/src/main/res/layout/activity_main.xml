<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:backgroundTint="#9C9A9A"
        android:text="9"
        android:onClick="on9Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_8" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:backgroundTint="#9C9A9A"
        android:text="3"
        android:onClick="on3Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_6"
        app:layout_constraintTop_toBottomOf="@+id/bt_6" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:backgroundTint="#9C9A9A"
        android:text="CLEAR"
        android:onClick="onClearClicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_3"
        app:layout_constraintTop_toBottomOf="@+id/bt_3" />

    <Button
        android:id="@+id/bt_change_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:backgroundTint="#9C9A9A"
        android:textColor="#000000"
        android:onClick="onChangeFieldClicked"
        app:layout_constraintStart_toStartOf="@+id/bt_0"
        app:layout_constraintTop_toBottomOf="@+id/bt_0" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9C9A9A"
        android:text="6"
        android:onClick="on6Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_9"
        app:layout_constraintTop_toBottomOf="@+id/bt_9" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9C9A9A"
        android:text="4"
        android:onClick="on4Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_7"
        app:layout_constraintTop_toBottomOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:backgroundTint="#9C9A9A"
        android:text="2"
        android:onClick="on2Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_5"
        app:layout_constraintTop_toBottomOf="@+id/bt_5" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9C9A9A"
        android:text="5"
        android:onClick="on5Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_8"
        app:layout_constraintTop_toBottomOf="@+id/bt_8" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:backgroundTint="#9C9A9A"
        android:onClick="on0Clicked"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_2"
        app:layout_constraintTop_toBottomOf="@+id/bt_2" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:backgroundTint="#9C9A9A"
        android:text="1"
        android:onClick="on1Clicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_4"
        app:layout_constraintTop_toBottomOf="@+id/bt_4" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#9C9A9A"
        android:text="7"
        android:onClick="on7Clicked"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C9A9A"
        android:text="8"
        android:onClick="on8Clicked"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:backgroundTint="#9C9A9A"
        android:text="="
        android:onClick="onEqualClicked"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bt_1"
        app:layout_constraintTop_toBottomOf="@+id/bt_1" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_night_mode">

        <RadioButton
            android:id="@+id/rb_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAdd"
            android:text="Add" />

        <RadioButton
            android:id="@+id/rb_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSubs"
            android:text="Substract" />

        <RadioButton
            android:id="@+id/rb_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMulti"
            android:text="Multiply" />

        <RadioButton
            android:id="@+id/rb_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDivide"
            android:text="Divide" />
    </RadioGroup>

    <Switch
        android:id="@+id/switch_night_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:onClick="onChangeBackground"
        android:text="Night Mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_left"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="37dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_equal"
        app:layout_constraintEnd_toStartOf="@+id/textView_operation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_left"
        app:layout_constraintEnd_toStartOf="@+id/textView_right"
        app:layout_constraintStart_toEndOf="@+id/textView_left" />

    <TextView
        android:id="@+id/textView_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_operation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_operation"
        app:layout_constraintTop_toTopOf="@+id/textView_left" />

    <TextView
        android:id="@+id/textView_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="="
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_result"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="34dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_9"
        app:layout_constraintStart_toEndOf="@+id/textView_equal" />

</androidx.constraintlayout.widget.ConstraintLayout>